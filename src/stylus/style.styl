// Incubator
.incub
	article
	&-form
		padding 15px
		margin-bottom 15px
		@media(min-width 768px)
			padding 40px
			height 470px

	article
		overflow hidden
		position relative
		@media(min-width 768px)
			margin-bottom 30px

		&.open
			transition height .4s ease-out
			@media(max-width 767px)
				height 380px

		h2
			font-size 2.25em
			font-weight 700
			line-height 1.17
			margin 15px 0
			@media(max-width 479px)
				font-size 1.5em
		p
			font-size 1.5em
			font-weight 300
			line-height 1.17
			@media(min-width 480px) and (max-width 767px)
				font-size 1.25em
				line-height 1.3
			@media(max-width 479px)
				font-size 1em
				line-height 1.25
	&-exe

		color #1c1b21
		font-size 0.75em
		font-weight 700
		line-height 1.25
		text-transform uppercase
		z-index 1
		button&
			background none
			border none
		position absolute
		bottom 36px
		@media(max-width 767px)
			bottom 15px
			.incub-adw &
				position relative
				bottom 0

	&-el
		background #fff
		@media(max-width 767px)
			padding-bottom 30px !important
	&-tag
		font-size 1.5em
		font-weight 500
		@media(max-width 479px)
			font-size 0.75em
	&-adw
		color white
		a
			color white !important
		background #4580fd
	&-form
		position absolute
		top -100%
		left 0
		width 100%
		@media(max-width 767px)
			top -380px
			min-height 380px
		height 100%
		background-color #f2f2f2
		transition transform .4s ease-out
		.open &
			transform translate(0,100%)

		.axs-form h3
			@media(min-width 480px)
				min-height 60px
			@media(max-width 479px)
				min-height 50px
				font-size .9em
		.axs-form-done
			@media(min-width 480px)
				top 75px
			@media(max-width 479px)
				top 50px
		.axs-form
			overflow hidden


