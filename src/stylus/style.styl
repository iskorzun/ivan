
// миксины
@require 'inc/func~'

// Глобальные стили
@require 'inc/global~'

ul,h1,h3,h2
	margin 0
	padding 0


:disabled
	opacity .69

.site-logo
	height 70px
	.table-cell
		vertical-align middle
		line-height 20px
		font-weight 700

.vrt
	position relative
	padding-right 20px
	padding-left 20px
	&:before
		position absolute
		content ''
		height 29px
		width 2px
		background-color #e6e7e6
		right 9px
		top 50%
		transform translate(0,-50%)

/*ЛЕВОЕ МЕНЮ*/
.mobile-menu
	@media (min-width 768px)
		display none
	position fixed
	right 20px
	top 20px
	display inline-block

.openMenu .burger
	transform scaleX(0)
	&:first-child
		transform rotate(45deg) translateX(1px)
	&:last-child
		transform rotate(-45deg) translateX(-2px)
.burger
	size 47px 4px
	background #000
	margin-bottom 8px
	transition transform .3s
	&:first-child
		transform-origin 6px 0px
	&:last-child
		transform-origin 6px 0px



.left-menu
	z-index 999
	position fixed
	top 0
	left 0
	@media(min-width 768px)
		height 100%
		width 220px
	@media(max-width 767px)
		height 70px
		width 100%
		// z-index 2
	background #fff

	ul
		@media (max-width 767px)
			position absolute
			left 0
			right 0
			transform scaleY(0)
			transform-origin top
			transition transform .3s
			z-index 9
			background #fff
			.openMenu&
				transform scaleY(1)
		list-style none
		// @media(max-width 767px)
		// 	position fixed
		// 	left 0
		// 	top 0
		// 	height 100%

	li
		&>a
			position absolute
			left 0
			top 0
			right 0
			bottom 0
		position relative
		height 40px
		line-height @height
		font-weight 500
		border-top 1px solid #f2f2f2
		text-indent 20px
		&.active
			font-weight 400
			background-color #f2f2f2
		&:last-child
			border-bottom 1px solid #f2f2f2


/*БЛОК НОВОСТИ*/
.site-post
	background #fff
	padding 30px 40px
	margin-bottom 12px
	h2
		margin-bottom 15px

.content-body
	a
		C = #4580FD
		color C
		&:hover
			color lighten(C,10)
		&:visited
			color darken(C,15)
	@media(min-width 768px)
		margin-left 220px
		padding 30px
	@media(max-width 767px)
		margin-top 85px
	.top
		font-size 2.25em
		font-weight 700
		line-height 1.5em
		// margin-left 25px
		margin-bottom 15px
		@media(min-width 480px)
			margin-left 50px
		@media(max-width 479px)
			font-size 1.5em
			text-align center
	ul
		padding-left 15px
		&>li
			list-style-image inline("list-dot.png")
			padding-left 15px
			line-height 1.25em
			margin-bottom 10px
	li > ul
		margin-top 10px
		padding-left 10px
	li li
		list-style-image inline("sub-dot.png")

/*КУРСЫ и ГРИД*/
.grid
	width 100%
	text-align justify
.gap
.col-2
	@media(max-width 1279px)
		max-width 220px
		width 100%
	@media(min-width 1280px)
		width 23.4%
	display inline-block
	vertical-align top
.col-2
	@media(min-width 1280px)
		margin-bottom 2%
	padding 15px 20px
	margin-bottom 20px
	background-color #fff


.curs
	text-align left
	height 500px
	position relative
	&.open
		a
			transition color .2s
			color #000
		&:hover
			a
				color #4580fd
	&.plan
		overflow hidden
	.small
		font-size 0.875em
	&-img
		// margin-top 15px
		display flex
		align-items center
		min-height 175px
		img
			margin auto
			// margin-bottom 15px
	&-showform
		text-transform uppercase
	&-bottom
		font-size 0.75em
		font-weight 700
		position absolute
		bottom 20px
		left 15px
		right 15px
		button
			border none
			background none
	&-desk
		font-style italic
		line-height 1.21
	&-h
		color #b1b1b1
		font-size 0.875em
	h2
		font-size 1.5em
		font-weight 700
		line-height 1.25
		margin-top 15px
		// transition color .2s
	&-form
		transition transform .3s ease-out,height .3s,bottom .3s
		&.open
			transform translate(0,-100%)
		&.done
			height 190px
			bottom -@height
			.curs-form-info
			.curs-form-desk
			.curs-form-input
				opacity 0
				transition display .3s linear .3s,opacity .3s linear
				display none
			.curs-form-done
				display block
				transform scale(1)
			.curs-form-submit
				margin-top 0
		height 315px
		width 100%
		background-color #f2f2f2
		position absolute
		bottom -@height
		left 0
		padding inherit
		&-submit
		&-input
			font-size 0.75em
			font-weight 700
			background-color #fff
			text-align center
			display inline-block
			height 40px
			width 100%
		&-input
			border none
			margin-bottom 2px
			font-size 0.75em
			font-weight 700
			&:valid
				color #fff
				background-color #86c046
			&:invalid
				box-shadow none
				// color #fff
				// background-color #ff4b5c
			&::-webkit-input-placeholder
				font-size 0.75em
				font-weight 700
			&::-moz-placeholder
				font-size 0.75em
				font-weight 700
			&:-moz-placeholder
				font-size 0.75em
				font-weight 700
			&:-ms-input-placeholder
				font-size 0.75em
				font-weight 700
		&-submit
			border 2px solid
			margin-top 10px
			background none
			transition all .3s
			&:hover
			&:focus
				color #4580fd
		&-info
		&-done
		button
			text-transform uppercase
		&-info
			font-weight 700
			line-height 1.25
		&-desk
			font-size 0.875em
			font-weight 500
			line-height 1.14
		&-done
			font-weight 700
			line-height 1.25
			transform scale(0)
			display none
		&-hide
			border none
			background none
			color #6a6a6a
			font-size 0.75em
			font-weight 500
			position absolute
			bottom 20px
			left 15px

// Акселератор

.axs
	&-body
		background #fff
		@media(min-width 1280px)
			width 100%
			height 400px
		@media(max-width 767px)
			margin-bottom 20px
		h1
			color #040209
			font-size 3.5em
			font-weight 700
			@media(max-width 479px)
				font-size 1.5em
				line-height 1.17
	&-text
		@media(min-width 480px)
			font-size 2.25em
			line-height 1.25
			margin 0
		margin 5px 0
		font-weight 300

	&-5
		height 100%
		@media(min-width 1280px)
			width 49.9%
		@media(min-width 480px)
			padding 30px 40px

		@media(max-width 479px)
			padding 20px

		display inline-block
		&:last-child
			background #f2f2f2
			@media(min-width 768px)
				float right
		&:first-child
			@media(min-width 768px)
				float left

	&-form
		width 100%
		position relative
		overflow hidden
		&-done
			top 55px
			left -100%
			width 100%
			bottom 60px
			background #fff
			position absolute
			font-size 1.5em
			@media(min-width 480px)
				padding-left 50px
				padding-top 40px
			@media(max-width 479px)
				top 30px
				bottom 55px
				font-size 0.875em
				padding 60px 15px
			transition transform .3s
			.done &
				transform translate(100%,0)
		h3
			text-transform uppercase
			@media(min-width 480px)
				font-size 1.5em
				margin-bottom 30px

			@media(max-width 479px)
				font-size 1em
				margin-bottom 15px
			font-weight 700
			// margin-bottom 40px
	&-submit
	&-input
		width 99.9%
		height 50px
	&-input
		margin-bottom 10px
		border none
		padding 0 20px
		// font-size 0.875em
		// font-weight 500
		// &:focus
		// &:valid
		font-size 1.5em
		@media(max-width 479px)
			font-size 0.875em
			font-weight 700
		&:valid
			color #fff
			background-color #86c046
		&:invalid
			box-shadow none
			.check &
				color #fff
				background-color #ff4b5c

		&:-webkit-input-placeholder
			font-size 0.875em
			font-weight 500
		&::-moz-placeholder
			font-size 0.875em
			font-weight 500
		&:-moz-placeholder
			font-size 0.875em
			font-weight 500
		&:-ms-input-placeholder
			font-size 0.875em
			font-weight 500
		&:placeholder
			font-size 0.875em
			font-weight 500
	&-submit
		background none
		border 2px solid
		text-transform uppercase
		font-size 0.875em
		font-weight 700
		transition all .3s
		&:hover
		&:focus
			color #4580fd




