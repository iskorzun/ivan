// //////////////////////////////////////////////////
// CONST
// //////////////////////////////////////////////////
BaseFontSize = 16px
BaseLineHeight = BaseFontSize * 1.5
ImgPath = "../img/"
S = .3s
TF = ease-in-out
CB = cubic-bezier(0,0.6,0.4,1)



// ///////////////////////////////////////////
// BASE
// ///////////////////////////////////////////
*,
*:before,
*:after
	box-sizing border-box

// selectColor = lighten(#000)
::-moz-selection
	text-shadow none
	background-color #000
	color #fff
::selection
	text-shadow none
	background-color #000
	color #fff

html
	font normal BaseFontSize/1.21 'proxima-nova', Helvetica, Arial, sans-serif


html,
body
	min-height 100%





body
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	-ms-text-size-adjust 100%
	-moz-text-size-adjust 100%
	-webkit-text-size-adjust 100%
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	margin 0
	font-size 1emi
	color black
	background #e6e6e6




a
	color inherit
	text-decoration none
:focus
:hover
:active
	outline none

button
input
	outline none !important
	-webkit-appearance none
	border-radius 0

.img-responsive
	display block
	max-width 100%
	height auto

.float-l
	float left
.float-r
	float right
.clearfix
	clearfix()
.table
	display table
	&-cell
		display table-cell
